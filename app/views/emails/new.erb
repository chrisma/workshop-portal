<%= form_for @email, url: {action: "send_email"}, html: {class: 'email-form form-horizontal'} do |f| %>
    <div class="form-group">
      <label class="control-label col-sm-2" for="to"><%= t('.to') %>:</label>
      <div class="col-sm-10">
        <%= f.text_field :email, :recipients, class: 'email-to form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="subject"><%= t('.subject') %>:</label>
      <div class="col-sm-10">
        <%= f.text_field :email, :subject, class: 'email-subject form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.text_area :email, :content, class: 'email-content', rows: 15 %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 col-sm-offset-10">
        <%= f.submit t('.send'), class: 'email-submit btn btn-default' %>
      </div>
    </div>
<% end %>